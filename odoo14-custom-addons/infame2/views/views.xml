    <!-- Top menu item -->

    <menuitem name="infame2" id="infame2.menu_root"/>

    <!-- menu categories -->
    <!-- Indicamos los nombres de los menus-->
    <menuitem name="Website" id="infame2.menu_1" parent="infame2.menu_root" action="infame2.action_window"/> <!--Ponemos esto para que aparezca sin tener ningun submenu-->
    <menuitem name="Forum" id="infame2.menu_2" parent="infame2.menu_root"/>

    <!-- actions -->
    <!-- Indicamos los nombres de los submenus-->
    <menuitem name="Forum" id="infame2.menu_2_films" parent="infame2.menu_2"
              action="infame2.action_window"/>
    <menuitem name="Games" id="infame2.menu_2_games" parent="infame2.menu_2"
              action="infame2.action_window"/>

  </data>
</odoo>