<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="infame2.list">
      <field name="name">infame2 list</field>
      <field name="model">infame2.infame2</field>
      <field name="arch" type="xml">
        <tree decoration-danger="score&lt;25"> <!-- Aqui indicamos que lo ponemos en rojo, cuando score es menor que 25-->
          <field name="title"/>
          <field name="date"/>
          <field name="score" widget="percentpie"/> <!-- Aqui indicamos que score va a ser de tipo porcentaje-->
          <field name="distributor"/>
          <field name="publisher"/>
          <field name="favs"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models --> <!-- LO DESCOMENTAMOS Y NO TOCAMOS NADA-->

    <record model="ir.actions.act_window" id="infame2.action_window">
      <field name="name">infame2 window</field>
      <field name="res_model">infame2.infame2</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above --> <!-- LO DEJAMOS COMENTADO YA QUE NO LO VAMOS A USAR-->
